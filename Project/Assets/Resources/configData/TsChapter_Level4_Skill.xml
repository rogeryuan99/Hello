<?xml version="1.0" encoding="utf-8"?>
<Chapter>
	<Step hide_name="1.Prepare">
		<creations>
		</creations>
		<actions>
			<action obj="PauseButton"             call="GrayLock"               parms=""/>
			<action obj="TsUserBehaviorProcessor" call="LockCombo"              parms=""/>
			<action obj="TsUserBehaviorProcessor" call="LockInput"              parms="true"/>
			<action obj="TsUserBehaviorProcessor" call="LockMove"               parms=""/>
			<action obj="TsFtueManager"           call="BlockEnemyRandomAttack" parms=""/>
			<action obj="TsUserBehaviorProcessor" call="LockObjects"            parms="STARLORD(Clone)|DRAX(Clone)"/>
		</actions>
	</Step>	
	
	<Step hide_name="1.Teach StarLord Skill">
		<creations>
			<creation type="ENEMY" prefix="" obj="Ch1_Guard1" parent="" scale=".23"/>
		</creations>
		<actions>
			<action obj="TsObjectMover"           call="MoveTo"               parms="Ch1_Guard1|500|0|-50"/>
			<action obj="TsFunctionCaller"        call="SendVector3Message"   parms="Ch1_Guard1|move|350|0|-50"/>
			<action obj="Ch1_Guard1"              call="SetHealthTo"          parms="1"/>
			<action obj="TsUserBehaviorProcessor" call="Sleep"                parms="3.1"/>
			<action obj="TsUserBehaviorProcessor" call="UnlockObjects"        parms="STARLORD(Clone)"/>
		</actions>
	</Step>
	
	<Step hide_name="1.1.Tip To Click Starload">
		<creations>
			<creation type="NORMAL" prefix="Ts" obj="TsFingerTip" parent="GameAnchor" scale="1"/>	
			<creation type="NORMAL" prefix="Ts" obj="TsDialog"    parent="UIRoot"     scale="1"/>
		</creations>
		<actions>
			<action obj="TsDialog"                call="FillData"             parms="Narrator|UI_TsDialog_18"/> 
			<action obj="TsObjectFactory"         call="HideGameObject"       parms="Button-Next"/>
			<action obj="TsUserBehaviorProcessor" call="LockInput"            parms="false"/>
			<action obj="TsUserBehaviorProcessor" call="LockAttack"           parms=""/>

			<action obj="TsFingerTip"             call="AddMotion"            parms="MoveToSomething|STARLORD(Clone)"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="ClickPrompt"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="Wait|1"/>
			<action obj="TsFingerTip"             call="PlayMotion"           parms=""/>
			
			<action obj="TsUserBehaviorProcessor" call="WaitToClickDownSomethingAndUpLButton" parms="STARLORD(Clone)|GameCamera"/>
			<action obj="TsFingerTip"             call="Stop"                 parms=""/>
		</actions>
	</Step>
	
	<Step hide_name="1.2.Tip To Click Skill Icon">
		<creations>
		</creations>
		<actions> 
			<action obj="TsUserBehaviorProcessor" call="LockObjects"          parms="STARLORD(Clone)"/>
			<action obj="TsUserBehaviorProcessor" call="LockInput"            parms="true"/>
			<action obj="TsDialog"                call="FillData"             parms="Narrator|UI_TsDialog_19"/>
			
			
			<action obj="TsFingerTip"             call="AddMotion"            parms="MoveToSomething|skillBtnIcon1"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="ClickPrompt"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="Wait|1"/>
			<action obj="TsFingerTip"             call="PlayMotion"           parms=""/>
			
			<action obj="TsUserBehaviorProcessor" call="WaitToClickDownSomethingAndUpLButton" parms="skillBtnIcon1|Camera"/>
			
			<action obj="TsFingerTip"             call="Stop"                 parms=""/>
			<action obj="TsUserBehaviorProcessor" call="LockInput"            parms="false"/>

		</actions>
	</Step>
	
	<Step hide_name="1.3.Tip To Cast Skill">
		<creations>
		</creations>
		<actions>
			<action obj="TsDialog"                call="FillData"             parms="Narrator|UI_TsDialog_20"/>
			
			<action obj="TsFingerTip"             call="AddClickingObjectToPause" parms="STARLORD(Clone)|GameCamera"/>   
			<action obj="TsFingerTip"             call="AddMotion"            parms="MoveToSomething|STARLORD(Clone)"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="ClickPrompt"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="Wait|1"/>
			<action obj="TsFingerTip"             call="AddMotion"            parms="MoveFromSomethingToSomething|STARLORD(Clone)|Ch1_Guard1|1.5|.5|3|easeInOutQuad"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="Wait|.5"/>
			<action obj="TsFingerTip"             call="PlayMotion"           parms=""/>
			
			<action obj="TsUserBehaviorProcessor" call="UnlockAttack"         parms=""/>
			<action obj="TsUserBehaviorProcessor" call="UnlockObjects"        parms="STARLORD(Clone)"/>
			<!--<action obj="TsUserBehaviorProcessor" call="WaitToDragSomethingOnSomething" parms="STARLORD(Clone)|GameCamera|Ch1_Guard1|GameCamera"/>-->
			<action obj="TsUserBehaviorProcessor" call="WaitCharacterDie"     parms="Ch1_Guard1"/>
			<action obj="TsUserBehaviorProcessor" call="LockAttack"           parms=""/>
			<action obj="TsUserBehaviorProcessor" call="UnlockMove"           parms=""/>
			
			<action obj="TsFingerTip"             call="Stop"                 parms=""/>
			<action obj="TsObjectFactory"         call="ReleaseGameObject"    parms="TsFingerTip"/>
			<action obj="TsUserBehaviorProcessor" call="LockObjects"          parms="STARLORD(Clone)"/>
			<action obj="TsFunctionCaller"        call="SendMessage"          parms="IntentionGroup|Clear"/>
			<action obj="SkillIconManager"        call="HideSkillIcon"        parms=""/>
		</actions>
	</Step>

	<Step hide_name="Finish">
		<creations>
		</creations>
		<actions>
			<action obj="TsUserBehaviorProcessor" call="UnlockCombo"       parms=""/>
			<action obj="TsUserBehaviorProcessor" call="LockInput"         parms="false"/> 
			<action obj="TsUserBehaviorProcessor" call="UnlockAttack"      parms=""/>
			<action obj="TsUserBehaviorProcessor" call="UnlockMove"        parms=""/>
			<action obj="TsFtueManager"           call="UnblockEnemyRandomAttack" parms=""/>
			<action obj="TsObjectFactory"         call="ReleaseGameObject" parms="TsDialog"/>
			<action obj="TsUserBehaviorProcessor" call="UnlockObjects"     parms="STARLORD(Clone)|DRAX(Clone)"/>
			<action obj="PauseButton"             call="Normal"            parms=""/>
		</actions>
	</Step>	

</Chapter>