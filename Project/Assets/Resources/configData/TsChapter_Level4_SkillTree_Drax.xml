<?xml version="1.0" encoding="utf-8"?>
<Chapter>
	<Step hide_name="0.sleep">
		<creations>
		</creations>
		<actions>
			<action obj="Button-Back_SkillTreeDlg"              call="GrayLock" parms=""/>
			<action obj="TsObjectFactory"         call="ReleaseGameObject"    parms="TsFingerTip3"/>
			<action obj="TsObjectFactory"         call="HideGameObject"       parms="TsFingerTip2"/>
		</actions>
	</Step>	

	<Step hide_name="1.Tip to Click First Icon">
		<creations>
			<creation type="NORMAL" prefix="Ts" obj="TsDialog"    parent="UIRoot"     scale="1"/>
			<creation type="NORMAL" prefix="Ts" obj="TsFingerTip" parent="GameAnchor" scale="1"/>
		</creations>
		<actions>
			<action obj="TsObjectMover"           call="MoveToInLocal"        parms="TsDialog|0|0|-700"/>
			<action obj="TsObjectFactory"         call="HideGameObject"       parms="Button-Next"/>
			<action obj="TsDialog"                call="FillData"             parms="Narrator|UI_TsDialog_16"/>
			
			<action obj="TsFingerTip"             call="AddMotion"            parms="MoveToSomething|placeholder1/0.CellTemplate(Clone)"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="ClickPrompt"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="Wait|1"/>
			<action obj="TsFingerTip"             call="PlayMotion"           parms=""/>
			
			<action obj="TsUserBehaviorProcessor" call="WaitToClickSomething" parms="placeholder1/0.CellTemplate(Clone)|Camera"/>    
			<action obj="TsFingerTip"             call="Stop"                 parms=""/>
			<action obj="TsObjectFactory"         call="ReleaseGameObject"    parms="TsDialog"/>
		</actions>
	</Step>
	
	<Step hide_name="2.Tip to Click TrainBtn">
		<creations>
		</creations>
		<actions>
			<action obj="TsFingerTip"             call="AddMotion"            parms="MoveToSomething|TrainBtn"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="ClickPrompt"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="Wait|1"/>
			<action obj="TsFingerTip"             call="PlayMotion"           parms=""/>
			
			<action obj="TsUserBehaviorProcessor" call="WaitToClickDownSomethingAndUpLButton" parms="TrainBtn/sprite|Camera"/>
			<action obj="TsFingerTip"             call="Stop"                 parms=""/>
		</actions>
	</Step>
	
	<Step hide_name="3.Tip to Click Btn-Yes">
		<creations>
		</creations>
		<actions>
			<action obj="Btn-No"                  call="GrayLock"             parms=""/>
			<action obj="TsFingerTip"             call="AddMotion"            parms="MoveToSomething|Btn-Yes"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="ClickPrompt"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="Wait|1"/>
			<action obj="TsFingerTip"             call="PlayMotion"           parms=""/>
			
			<action obj="TsUserBehaviorProcessor" call="WaitToClickDownSomethingAndUpLButton" parms="Btn-Yes|Camera"/>
			<action obj="TsFingerTip"             call="Stop"                 parms=""/>
			<!--<action obj="TsObjectFactory"         call="ReleaseGameObject"    parms="TsFingerTip"/>-->
			<action obj="TsObjectFactory"         call="HideGameObject"       parms="TsFingerTip"/>
			<action obj="TsFtueManager"           call="MarkEventFinished"    parms="11"/>  
			<action obj="TsUserBehaviorProcessor" call="WaitToTrainingFinished" parms="placeholder1/0.CellTemplate(Clone)"/>
			<action obj="TsFtueManager"           call="MarkEventFinished"    parms="11.1"/>  
		</actions>
	</Step>
	
	<Step hide_name="4.Tip to Click BackBtn">
		<creations>
		</creations>
		<actions>
			<action obj="TsObjectFactory"         call="ShowGameObject"       parms="TsFingerTip"/>
			<action obj="Button-Back_SkillTreeDlg"             call="Normal"               parms=""/>
			<action obj="TsFingerTip"             call="AddMotion"            parms="MoveToSomething|Button-Back_SkillTreeDlg"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="ClickPrompt"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="Wait|1"/>
			<action obj="TsFingerTip"             call="PlayMotion"           parms=""/>
			
			<action obj="TsUserBehaviorProcessor" call="WaitToClickDownSomethingAndUpLButton" parms="Button-Back_SkillTreeDlg/Normal/Button|Camera"/>
			<action obj="TsFingerTip"             call="Stop"                 parms=""/>
			<action obj="TsObjectFactory"         call="ReleaseGameObject"    parms="TsFingerTip"/>
			<action obj="TsObjectFactory"         call="ShowGameObject"       parms="TsFingerTip2"/>
			
			<action obj="HeroStateDialog_DRAX(Clone)/Buttons/Train_btn"       call="Normal" parms="11"/>
		</actions>
	</Step>
</Chapter>