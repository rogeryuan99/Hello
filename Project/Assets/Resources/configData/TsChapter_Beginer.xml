<Chapter>
	<Step hide_name="Prepare">
		<creations>
			<creation type="NORMAL" prefix="Ts" obj="TsUserBehaviorProcessor" parent=""           scale="1"/>
			<creation type="NORMAL" prefix="Ts" obj="TsObjectMover"    parent=""       scale="1"/>
			<creation type="NORMAL" prefix="Ts" obj="TsFunctionCaller" parent=""       scale="1"/>
			<creation type="NORMAL" prefix="Ts" obj="TsObjectFactory"  parent=""       scale="1"/>
		</creations>
		<actions>
			<action obj="TsUserBehaviorProcessor" call="LockCombo"     parms=""/>
		</actions>
	</Step>	
	<Step hide_name="1.Teach Moving">
		<creations>
			<creation type="NORMAL" prefix="Ts" obj="TsDialog"         parent="UIRoot" scale="1"/>
			<creation type="HERO"   prefix=""   obj="STARLORD"         parent=""       scale=".23"/>
			<creation type="HERO"   prefix=""   obj="DRAX"         parent=""       scale=".23"/>
			<creation type="ENEMY"  prefix=""   obj="Chitauri"    parent=""           scale=".23"/>
		</creations>
		<actions>
			<action obj="TsUserBehaviorProcessor" call="LockInput"         parms="true"/>
			<action obj="TsObjectFactory"         call="HideGameObject"    parms="skillBtnIconPanel"/>
			<action obj="TsObjectMover"           call="MoveTo"               parms="STARLORD|-500|0|-50"/>
			<action obj="TsObjectMover"           call="MoveTo"               parms="DRAX|-5000|0|-50"/>
			<action obj="TsObjectMover"           call="MoveTo"               parms="Chitauri|-5000|0|-50"/>
			<action obj="TsFunctionCaller"        call="SendVector3Message"   parms="STARLORD|move|-200|0|-50"/>
			<action obj="TsDialog"                call="FillData"             parms="NpcName|Welcome to GotG. Follow me!"/>
			<action obj="TsUserBehaviorProcessor" call="WaitToClickSomething" parms="Button-Next|Camera"/>
			<action obj="TsDialog"                call="FillData"             parms="NpcName|Let's start learning the basics. First, I'll show you how to move."/>
			<action obj="TsUserBehaviorProcessor" call="WaitToClickSomething" parms="Button-Next|Camera"/>
			<action obj="TsUserBehaviorProcessor" call="LockInput"         parms="false"/>
		</actions>
	</Step>
	<Step hide_name="Move">
		<creations>
			<creation type="NORMAL" prefix="Ts" obj="TsCircle"        parent=""           scale="1"/>
			<creation type="NORMAL" prefix="Ts" obj="TsFingerTip"     parent="GameAnchor"     scale="1"/>
		</creations>
		<actions>
			<action obj="TsObjectMover"           call="MoveTo"               parms="TsCircle|200|-100|0"/>
			<action obj="TsDialog"                call="FillData"             parms="NpcName|Tap on Star-Lord, and drag him to the circle."/>
		
			<action obj="TsFingerTip"             call="AddClickingObjectToPause" parms="STARLORD|GameCamera"/>
			<action obj="TsFingerTip"             call="AddMotion"            parms="MoveToSomething|STARLORD"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="ClickPrompt"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="MoveFromSomethingToSomething|STARLORD|TsCircle|1.5|.5|3|easeInOutQuad"/>    
			<action obj="TsFingerTip"             call="AddMotion"            parms="Wait|.5"/>
			<action obj="TsFingerTip"             call="PlayMotion"           parms=""/>

			<action obj="TsObjectFactory"         call="HideGameObject"    parms="Button-Next"/>
			<action obj="TsUserBehaviorProcessor" call="WaitToMoveSomethingToSomething" parms="STARLORD|TsCircle|108|GameCamera"/>
			<action obj="TsObjectFactory"         call="ShowGameObject"    parms="Button-Next"/>

			<action obj="TsFingerTip"             call="Stop"                 parms=""/>
			<action obj="TsObjectFactory"         call="ReleaseGameObject"    parms="TsFingerTip"/>
		</actions>
	</Step>
	<Step hide_name="Done">
		<creations></creations>
		<actions>
			<action obj="TsDialog"                call="FillData"             parms="NpcName|Good job! Practice it again and move Drax!"/>
			<action obj="TsFunctionCaller"        call="SendMessage"   parms="IntentionGroup|Clear"/>
		</actions>
	</Step>
